<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coinone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="654dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin" />

    <TextView
        android:id="@+id/salaryID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Salary"
        app:layout_constraintBottom_toBottomOf="@+id/coinone"
        app:layout_constraintStart_toEndOf="@+id/coinone"
        app:layout_constraintTop_toTopOf="@+id/coinone"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/kshID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="4dp"
        android:text="KSH 40,000"
        app:layout_constraintBottom_toBottomOf="@+id/coinone"
        app:layout_constraintStart_toEndOf="@+id/coinone"
        app:layout_constraintTop_toBottomOf="@+id/salaryID"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/date_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:text="1st July 2024"
        app:layout_constraintBottom_toBottomOf="@+id/kshID"
        app:layout_constraintStart_toEndOf="@+id/kshID"
        app:layout_constraintTop_toTopOf="@+id/salaryID"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>